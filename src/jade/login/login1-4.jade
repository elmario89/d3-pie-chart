extends /_includes/layout.jade

block title
    title DSX
    meta(name="description", content="")

    - LOGIN = true;

block content
    .dsx-wrap-outer
        .dsx-wrap
            .dsx-wrap-inner.-tertiary
                .dsx-login
                    .dsx-login-header
                        .dsx-login-header-title
                            .dsx-login-header-title-action
                                a(href="")
                                    +svgsprite("long-arrow-left")
                                    h2 Confirmation

                    .dsx-login-email
                        .dsx-form-input-container.-primary.-padded
                            input.dsx-form-input.-transparent(placeholder="SMS CODE")
                            .dsx-form-input-container-message.-primary Resend

                    .dsx-login-action
                        button.dsx-button.-secondary.-animated(type='button')
                            span Confirm
                            +svgsprite("chevron-right")